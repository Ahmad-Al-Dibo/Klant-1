# Django
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (MongoDB)
DB_NAME=company_services
DB_HOST=localhost
DB_PORT=27017
DB_USER=
DB_PASSWORD=
DB_AUTH_SOURCE=admin
DB_AUTH_MECHANISM=SCRAM-SHA-256
